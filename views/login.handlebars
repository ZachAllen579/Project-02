<div class="text-3xl ml-96 flex justify-center">
  <div class="space-y-5 mr-10">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="space-y-5">
        <div class="form-group">
          <label for="email-login">email:</label>
          <input class="form-input mt-5 flex items-stretch border-solid border-2 border-gray-800 rounded-md" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">password:</label>
          <input class="form-input mt-5 flex items-stretch border-solid border-2 border-gray-800 rounded-md" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary border-solid border-2 border-gray-800 rounded-md text-white bg-gray-800 hover:bg-lightblue" type="submit">login</button>
        </div>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <div class="space-y-5">
      <h2>Signup</h2>

      <form class="form signup-form">
        <div class="space-y-5">
          <div class="form-group">
            <label for="name-signup">name:</label>
            <input class="form-input mt-5 flex items-stretch border-solid border-2 border-gray-800 rounded-md" type="text" id="name-signup" />
          </div>
          <div class="form-group">
            <label for="email-signup">email:</label>
            <input class="form-input mt-5 flex items-stretch border-solid border-2 border-gray-800 rounded-md" type="text" id="email-signup" />
          </div>
          <div class="form-group">
            <label for="password-signup">password:</label>
            <input class="form-input mt-5 flex items-stretch border-solid border-2 border-gray-800 rounded-md" type="password" id="password-signup" />
          </div>
          <div class="form-group">
            <button class="btn btn-primary border-solid border-2 border-gray-800 rounded-md text-white bg-gray-800 hover:bg-lightblue" type="submit">signup</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>
